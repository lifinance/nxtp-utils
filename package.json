{
  "name": "@connext/nxtp-utils",
  "version": "0.1.38",
  "description": "Common utilities for use within the @connext/nxtp-* packages",
  "author": "Connext",
  "license": "MIT",
  "scripts": {
    "dev": "yarn build --watch --preserveWatchOutput",
    "lint": "eslint ./src --ext .ts --env node",
    "test": "ts-mocha --check-leaks --exit --timeout 60000 'test/**/*.spec.ts'",
    "clean": "rimraf ./dist ./tsconfig.tsBuildInfo",
    "build": "tsc --build ./tsconfig.build.json",
    "verify": "yarn test && yarn clean && yarn build && yarn lint --max-warnings 0",
    "purge": "yarn clean && rimraf ./coverage ./node_modules",
    "tsp": "yarn run tsp:root \"$@\" --cwd $(pwd)"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "dependencies": {
    "@sinclair/typebox": "^0.18.1",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "ajv": "^8.6.2",
    "ajv-formats": "^2.1.1",
    "axios": "^0.21.1",
    "chai": "4.3.4",
    "chai-as-promised": "7.1.1",
    "chai-subset": "^1.6.0",
    "eccrypto-js": "^5.4.0",
    "eslint": "^7.32.0",
    "eth-sig-util": "^2.5.3",
    "ethers": "^5.4.6",
    "graphql-request": "^3.5.0",
    "hyperid": "^2.3.1",
    "p-queue": "6.6.2",
    "pino": "^6.13.0",
    "secp256k1": "^4.0.2",
    "sinon-chai": "^3.7.0",
    "ts-natsutil": "^1.1.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.4",
    "@types/chai-subset": "^1.3.3",
    "@types/eth-sig-util": "^2.1.1",
    "@types/mocha": "^9.0.0",
    "@types/pino": "^6.3.11",
    "@types/secp256k1": "^4",
    "@types/sinon": "^10.0.2",
    "@types/sinon-chai": "^3.2.5",
    "mocha": "^9.0.3",
    "nyc": "^15.1.0",
    "sinon": "^11.1.2",
    "ts-mocha": "^8.0.0",
    "tslib": "^2.3.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@jtbennett/ts-project-scripts": "^1.0.0-rc.4",
    "@types/node": "^14.17.5",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "concurrently": "^6.2.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsdoc": "^36.0.7",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.5"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "gitHead": "937a7cde93e6ac1e151c6374f48adf83d3fa4ec6"
}
